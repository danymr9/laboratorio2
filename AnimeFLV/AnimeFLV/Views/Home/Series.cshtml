@model List<AnimeFLV.Models.Series>

@{
    ViewBag.Title = "Series de " + @ViewBag.NameCategory;
}

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
<script>
    $(document).ready(function () {
        $('[data-toggle="popover"]').popover({
            placement: 'right',
            trigger: 'hover'
        });
    });
</script>
<div class="card">
    <div class="card-body">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb text-light" style="background-color:#464B4C;">
                <li class="breadcrumb-item"><a  class="text-light" href="@Url.Action("Index")">Home</a></li>
                <li class="breadcrumb-item"><a  class="text-light" href="@Url.Action("Categorias")">Categorias</a></li>
                <li class="breadcrumb-item active text-info" aria-current="page"> @ViewBag.NameCategory</li>
            </ol>
        </nav>
        @foreach (var item in Model)
        {
            <div class="container-fluid" style="width: 250px; margin: 5px; display: inline-block; vertical-align: top; text-align: center;">
                <a href="@Url.Action("Capitulos", new { id=item.ID })">
                    <div class="panel panel-default" data-toggle="popover" title="@item.Name" data-content="@item.Synopsis">
                        <div class="panel-body">
                            <img class="img-thumbnail" src="~/@item.ImagePath" alt="Card image" style="border-radius: 10px; width: 250px; height:320px;">
                        </div>
                        <span class="badge badge-pill badge-primary" style="position:absolute; margin:-40px -100px;">@ViewBag.NameCategory</span>
                    </div>
                    <h6 class="text-dark navbar-brand">@item.Name</h6>
                </a>
            </div>
        }
    </div>
</div>


