@model List<AnimeFLV.Models.Series>

@{
    ViewBag.Title = "Series de " + @ViewBag.NameCategory;
}
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
<script>
    $(document).ready(function () {
        $('[data-toggle="popover"]').popover({
            placement: 'right',
            trigger: 'hover'
        });
    });
</script>
<div class="content-title">
    <p>Series de @ViewBag.NameCategory </p>
</div>

@foreach (var item in Model)
{
    <div class="content-Series" data-toggle="popover" title="@item.Name" data-content="@item.Synopsis">
        <a href="@Url.Action("Capitulos", new { id=item.ID })">
            <img src="~/@item.ImagePath" />
            <div class="background-title-series"></div>
            <h3 class="title-series">@item.Name</h3>
        </a>
    </div>
}

