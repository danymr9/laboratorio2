<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AnimeFLV</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
</head>
<body>
    <div>
        <nav class="navbar navbar-inverse navbar-fixed-top navigation-clean-search" style="background: linear-gradient(90deg, rgba(0,0,0,1) 27%, rgba(34,193,195,1) 100%);">
            <div class="container">
                <div class="navbar-header"><a class="navbar-brand" href="@Url.Action("Index")" style="color: rgb(255,255,255);">AnimeFLV</a><button data-toggle="collapse" class="navbar-toggle collapsed" data-target="#navcol-1"><span class="sr-only">Toggle navigation</span><span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span></button></div>
                <div class="collapse navbar-collapse" id="navcol-1">
                    <ul class="nav navbar-nav">
                        <li class="active" role="presentation"><a href="@Url.Action("Index")" style="color: rgb(255,255,255);">INICIO</a></li>
                        <li role="presentation"><a href="@Url.Action("Categorias")" style="color: rgb(255,255,255);">DIRECTORIO ANIME</a></li>
                    </ul>

                </div>
            </div>
        </nav>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
                <p>&copy; @DateTime.Now.Year - AnimeFLV</p>
            </footer>
    </div>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>