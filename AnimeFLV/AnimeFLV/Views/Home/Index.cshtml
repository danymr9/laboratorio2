@model List<AnimeFLV.Models.Series>

@{
   ViewBag.Title = "Index";
}
    <div class="Slider">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                <li data-target="#carousel-example-generic" data-slide-to="2"></li>
                <li data-target="#carousel-example-generic" data-slide-to="3"></li>
                <li data-target="#carousel-example-generic" data-slide-to="4"></li>
                <li data-target="#carousel-example-generic" data-slide-to="5"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="~/Recursos/img/Slider_Dr.Stone.jpg" alt="" width="1920">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/Recursos/img/Slider_Pokemon.jpeg" alt="..." width="1920">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/Recursos/img/Slider_OnePiece.jpg" alt="..." width="1920">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/Recursos/img/Slider_DragonBall.jpg" alt="..." width="1920">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/Recursos/img/Slider_Major.jpg"  alt="..." width="1920">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/Recursos/img/Slider_Nanatsu.jpg" alt="..." width="1920">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
<div>
    <h1>Nuevos Animes</h1>
</div>
@foreach (var item in Model)
{
    <div class="content-New">
        <img  src="~/@item.ImagePath"/>
        <div class="background-title-New"></div>
        <div class="title-New">@item.Name</div>
    </div>
}